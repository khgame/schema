{
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ],
    "autoFixOnSave": true
  },
  "rules": {
    "no-var-keyword": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"
    ],
    "variable-name": {
      "options": [
        "ban-keywords",
        "check-format",
        "allow-pascal-case",
        "allow-leading-underscore",
        "allow-snake-case"
      ]
    },
    "indent": [true, "spaces", 4],
    "interface-name": true,
    "no-console": false,
    "no-empty": false,
    "no-empty-interface": false,
    "no-conditional-assignment": false,
    "object-literal-sort-keys": false,
    "no-var-requires": false,
    "prefer-for-of": false,
    "no-shadowed-variable": false,
    "max-classes-per-file": false,
    "max-line-length": [
      true,
      180
    ],
    "forin": false // open this in future
  }
}
